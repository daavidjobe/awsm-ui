{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "React": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "standard",
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-var": "error"
  }
}
